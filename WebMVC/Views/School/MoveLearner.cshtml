@model WebMVC.Models.MoveLearnerViewModel

@{
    ViewBag.Title = "Move Learner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Move Learner From One Grade to Another</h2>
<div class="row" style="margin-top:50px;">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">
                    <i class="entypo-plus-circled"></i>
                    Learner Bio-Data
                    <span class="pull-right">
                    </span>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12" align="left">
                        @Html.ActionLink("Back", "MyLearners", "School")
                    </div>
                    <div class="container-fluid">
                        
                        <div class="tab-content">
                            <div id="home" class="tab-pane fade in active">
                                <h3>Basic Details</h3>
                                <div class="col-md-12" style="color:red">CAPTURE ONLY LEARNERS WITH BIRTH CERTIFICATES!!</div>
                                <div class="col-md-12">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-horizontal">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="mymessage text-success"></div>
                                            @if (ViewBag.Message != "")
                                            {
                                                <p>
                                                    <div class="text-success">@ViewBag.Message</div>
                                                </p>}
                                            @if (ViewBag.Message2 != "")
                                            {
                                                <p>
                                                    <div class="text-fail">@ViewBag.Message2</div>
                                                </p>
                                            }
                                            @Html.HiddenFor(x => x.OriginalGrade)
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.UPI, htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.UPI, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.UPI, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.ALearnerViewModel.Surname, htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ALearnerViewModel.Surname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.ALearnerViewModel.FirstName, htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ALearnerViewModel.FirstName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.ALearnerViewModel.OtherNames, htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ALearnerViewModel.OtherNames, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.Label("Birth Cert. No.", htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ALearnerViewModel.Birth_Cert_No, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.Label("Date of Birth", htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ALearnerViewModel.DOB2, new { @type = "date", @class = "form-control datepicker", @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.Label("Gender", htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ALearnerViewModel.LGender, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.ALearnerViewModel.Nationality, htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ALearnerViewModel.Country_Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.Label("Current Grade", htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ALearnerViewModel.Class_Name, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.NewGrade, htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.NewGrade, new SelectList(ViewBag.ClassList, "Value", "Text"), "--Select--", new { @id = "ddlClass", @class = "form-control" })
                                                                @Html.ValidationMessageFor(model => model.NewGrade, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <div class="col-md-12 text-center">
                                                            <input type="submit" value="SAVE" class="btn btn-default" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>